<schemalist gettext-domain="liri">
  <schema id="io.liri.Terminal" path="/io/liri/Terminal/">
    <key name="shell-program" type="s">
      <default>'/bin/bash'</default>
      <summary>Shell Program</summary>
      <description>
        Shell program to run when a new window is created.
      </description>
    </key>
    <key name="color-scheme" type="s">
      <default>'Linux.colorscheme'</default>
      <summary>Color Scheme</summary>
      <description>
        Color scheme for the terminal view.
      </description>
    </key>
    <key name="font-family" type="s">
      <default>'monospace'</default>
      <summary>Font Family</summary>
      <description>
        Font family for the terminal view.
      </description>
    </key>
    <key name="font-size" type="i">
      <default>11</default>
      <summary>Font Size</summary>
      <description>
        Font size for the terminal view.
      </description>
    </key>
    <key name="opacity" type="i">
      <default>100</default>
      <summary>Opacity</summary>
      <description>
        Terminal view opacity.
      </description>
    </key>
    <key name="hide-sudo-warning" type="b">
      <default>false</default>
      <summary>Hide Sudo Warning</summary>
      <description>
        Hide warning when pasting potentially unsafe commands.
      </description>
    </key>
    <key name="smart-copy-paste" type="b">
      <default>false</default>
      <summary>Smart Copy Paste</summary>
      <description>
      </description>
    </key>
  </schema>
</schemalist>
